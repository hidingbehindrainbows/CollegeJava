import java.util.Scanner;
class Account
{
    String cust_name;
    int acc_no;
    double balance;
    String type_of_account; 
    public void withdraw()
    {
	double removal;
	System.out.println("Enter amount of money you want to withdraw");
	Scanner two = new Scanner(System.in);
	removal = two.nextDouble();
	balance -= removal;
	System.out.println("New Balance:\t"+balance);	
    }
    public void deposit()
    {
	Scanner one = new Scanner(System.in);
	System.out.println("Enter name: ");
	cust_name = one.next();
	System.out.println("Enter Type of account: ");
	type_of_account = one.next();
	System.out.println("Enter acc_no: ");
	acc_no = one.nextInt();
	System.out.println("Enter depositing amount: ");
	balance = one.nextInt();
    }
    public void display()
    {
	System.out.println("Name:\t" + cust_name + "\nType of Account:\t"+type_of_account+"\nAccount Number:\t"+acc_no+"\nAmount of Money in Account:\t"+balance);
    }
    public double updateBal()
    {
	double add;
	System.out.println("Enter amount of money you want to deposit");
	Scanner three = new Scanner(System.in);
	add = three.nextDouble();
	return add;
    }
}
class Current extends Account
{
    double servicecharge;
    public double checkBal()
    {
	if(balance<50000)
	{
		servicecharge = 1000;
		System.out.println("You have gone below our 50k limit and will be charged 1k for every month you don't pay to keep your account over the minimum limit.");
		return servicecharge;
	}
	else
	{
		servicecharge = 100;
		return servicecharge;
	}
    }
}
class Saving extends Account
{
    double interest;
    public void computeInterest(double s)
    {
	interest = s;
	balance -= interest;
	System.out.println("Your new balance is:\t"+balance);
    }
    public void depositInterest(double s)
    {
	interest = s;
	balance = balance + interest - 100;
	System.out.println("New Balance:\t"+balance);
    }   
}

class Banking
{
	public static void main(String args[])
	{
		int choice;
		double service;
		Account First = new Account();
		Current Second = new Current();
		Saving Third = new Saving();
		
		First.deposit();
		System.out.println("Do you want to \n1)Display your account info\n2)Do you want to update your balance?\n3)Do you want to withdraw?\n");
	while(true)
	{
		System.out.println("Enter choice");
		Scanner main = new Scanner(System.in);
		choice = main.nextInt();
		switch(choice)
		{
			case 1 : First.display();
				break;
			case 2 : service = First.updateBal();
				Third.computeInterest(service);
				break;
			case 3 : First.withdraw(); 
				service = Second.checkBal();
				Third.depositInterest(service);
				break;
			case 4: System.exit(0);
				break;
			default : System.out.println("Default");
				
		}
	}
		
	}
}
